@model WebApplication2.Models.DoctorViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css" />

    <link rel="stylesheet" type="text/css" href="~/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">
    <title>Preclinic - Medical & Hospital</title>

    <style>
        .ms-panel-header {
            position: relative;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .ms-panel-custome {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>

    <div class="ms-content-wrapper">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row" style="margin-top: 55px; margin-left: 180px;">
                <div class="col-md-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb pl-0">
                            <li class="breadcrumb-item" style="margin-left: 3px;"><a href="#"> Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Doctor</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Doctors</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-xl-12 col-md-12">
                    <div class="ms-panel">
                        <br />
                        <div class="ms-panel-body">
                            <form class="needs-validation" novalidate="">

                                <div class="form-row">
                                    <div class="col-md-6 mb-3">
                                        @Html.LabelFor(model => model.DoctorID)
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.DoctorID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Full Name" } })
                                            @Html.ValidationMessageFor(model => model.DoctorID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        @Html.LabelFor(model => model.FullName)
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter First Name" } })
                                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-md-6 mb-3">
                                        @Html.LabelFor(model => model.FirstName)
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Full Name" } })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        @Html.LabelFor(model => model.LastName)
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter First Name" } })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-md-6 mb-3">
                                        @Html.LabelFor(model => model.EmailID)
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Last Name" } })
                                            @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        @Html.LabelFor(model => model.PhoneNumber)
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email Address" } })
                                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 mb-3">
                                        @Html.LabelFor(model => model.Address)
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Phone Number" } })
                                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        @Html.LabelFor(model => model.DepartmentID)
                                        <div class="input-group">
                                            @Html.DropDownListFor(model => model.DepartmentID, new[]{
                                            new SelectListItem() {Text = "Neurology", Value="1"},
                                                 new SelectListItem() {Text = "Gynaecology", Value="2"},
                                                 new SelectListItem() {Text = "Microbiology", Value="3"},
                                                 new SelectListItem() {Text = "Pharmacy", Value="4"},
                                                 new SelectListItem() {Text = "Neonatal", Value="5"}
                                            }, "---Select an option---", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 mb-3">
                                        @Html.LabelFor(model => model.Qualification)
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Qualification, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Qualification" } })
                                            @Html.ValidationMessageFor(model => model.Qualification, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>

                                <button class="btn btn-warning mt-4 d-inline w-20" type="reset">Reset</button>
                                <button class="btn btn-primary mt-4 d-inline w-20" type="submit" id="btnsubmit">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>